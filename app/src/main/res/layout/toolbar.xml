<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingEnd="16dp"
            android:paddingStart="0dp"
            android:text="@string/company_name"
            android:textColor="@android:color/white"
            android:fontFamily="@font/coolfont"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:layout_marginEnd="5dp"
            android:text="ΕΙΣΟΔΟΣ"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textColorLink="#FF0000"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register_button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/login_button_background"
            android:layout_marginEnd="10dp"
            android:text="ΕΓΓΡΑΦΗ"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textColorLink="#FF0000"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deposit_button"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:layout_marginEnd="5dp"
            android:text="@string/deposit"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textColorLink="#FF0000"
            android:onClick="showPopup" />

        <FrameLayout
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="18dp"
            android:paddingTop="16dp"
            android:paddingLeft="0dp"
            android:layout_gravity="end"
            android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/profile" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="18dp"
            android:paddingTop="16dp"
            android:paddingLeft="0dp"
            android:layout_gravity="end"
            android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_keyboard_arrow_down" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/remain_amount_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingTop="16dp"
            android:paddingLeft="0dp"
            android:layout_gravity="end"
            android:paddingBottom="16dp">
                <TextView
                    android:id="@+id/remain_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="end"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:text="0,00€"
                    android:textSize="13sp"
                    android:textColor="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/popup_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone"
            android:gravity="center">
            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@android:color/white" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>