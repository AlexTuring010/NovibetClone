<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:padding="0dp">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/game_activity_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="18dp"
            android:paddingTop="16dp"
            android:paddingLeft="8dp"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_arrow_back" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deposit_button"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:layout_marginEnd="5dp"
            android:text="@string/deposit"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textColorLink="#FF0000"/>

        <FrameLayout
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="18dp"
            android:paddingTop="16dp"
            android:paddingLeft="0dp"
            android:layout_gravity="end"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/profile" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="18dp"
            android:paddingTop="16dp"
            android:paddingLeft="0dp"
            android:layout_gravity="end"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_keyboard_arrow_down" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/remain_amount2_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingTop="16dp"
            android:paddingLeft="0dp"
            android:layout_gravity="end"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/remain_amount2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="end"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:text="0,00€"
                android:textSize="13sp"
                android:textColor="@android:color/white" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/game_blue">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="start"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bet_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="5€"
                android:background="@drawable/toggle_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="8dp"
                android:textSize="16dp"
                android:height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <ToggleButton
                android:height="70dp"
                android:id="@+id/toggle_head_tail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textOff="Γράμματα"
                android:textOn="Κορώνα"
                android:background="@drawable/toggle_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="13dp"
                android:layout_marginBottom="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:height="70dp"
                android:id="@+id/toss_coin_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Toss Coin"
                android:background="@drawable/toggle_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="13dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>